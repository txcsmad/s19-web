<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="css" href="/css/normalize.css">
    <link rel="stylesheet" type="css" href="/css/skeleton.css">
    <link rel="stylesheet" type="css" href="/css/style.css">
    <script src="https://unpkg.com/vue@2.5.2/dist/vue.js"></script>
  </head>
  <body>
      <% if (id != undefined) { %>
        <h1><%= id %></h1>
      <% } %>
      <div id="app">
        <ul>
          <li v-for="post in posts">
            <h3>{{post.title}}</h3>
            <p><strong>{{post.author}}</strong></p>
            <p>{{post.body}}</p>
          </li>
        </ul>
      </div>
  </body>
  <script src="/js/view.js"></script>
</html>
